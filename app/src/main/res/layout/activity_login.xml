<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:padding="10dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/baloo"
            android:minHeight="48dp"
            android:text="ĐĂNG NHẬP"
            android:textColor="@color/blue_dark"
            android:textSize="26dp" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/logobamboo"></ImageView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Tên người dùng"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/white"
            app:startIconTint="@color/black"
            app:endIconMode="clear_text"
            android:layout_marginTop="20dp"
            app:startIconDrawable="@drawable/admin"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:inputType="text"
                android:fontFamily="@font/baloo"
                android:textColor="@color/blue_dark" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Mật khẩu"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/white"
            app:startIconTint="@color/black"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/unlock"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/baloo"
                android:inputType="textPassword"
                android:textColor="@color/blue_dark" />

        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:fontFamily="@font/baloo"
                android:onClick="GoForgotPass"
                android:text="Quên mật khẩu"
                android:textColor="@color/blue_dark" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:fontFamily="@font/baloo"
            android:textColor="@color/blue_dark"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/md_blue_grey_100"
            android:onClick="SignIn"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo mật khẩu"
            android:onClick="CreateAccount"
            android:fontFamily="@font/baloo"
            android:background="#00000000"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue_dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copyrightbybambooairways"
            android:fontFamily="@font/baloo"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:textColor="@color/blue_dark"/>

    </LinearLayout>
</ScrollView>